<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/magenta_5">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@color/purple_3"
        android:id="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white" />

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Conversations"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/purple_3"
        android:textColor="@color/white" />

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView5"
        android:background="@color/purple_6"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="22sp"
        android:text="\nTap on a Person to Start a Chat"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:textColor="@color/purple_1" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatItemList"
        android:background="@color/magenta_5"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/userHelper2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dont Know What To Send?"
        android:id="@+id/userHelper2"
        android:layout_gravity="center_horizontal"
        android:background="@color/faded_pink_dark"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/chatItemList" />


</RelativeLayout>