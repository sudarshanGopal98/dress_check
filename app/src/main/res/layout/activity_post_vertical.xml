<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/magenta_4">

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Past Posts"
        android:id="@+id/postHeader"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:textColor="#ffffff"
        android:background="@color/purple_2"
        android:textSize="25sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postSelector"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:smoothScrollbar="false"
        android:scrollingCache="false"
        android:dividerHeight="5dp"
        android:descendantFocusability="beforeDescendants"
        android:layout_below="@+id/spacer4"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/userHelper3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/spacer4"
        android:layout_below="@+id/postSelector"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView15"
        android:layout_below="@+id/postHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:text="I Need Help !"
        android:id="@+id/userHelper3"
        android:background="@color/faded_pink_dark"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>