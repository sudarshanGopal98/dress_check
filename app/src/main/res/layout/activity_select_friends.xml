<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/magenta_5">

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/spacer3"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:background="@color/purple_3"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_below="@+id/spacer1"
        android:layout_alignParentStart="true" />

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Where to Post?"
        android:id="@+id/header1"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:background="@color/purple_3"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_below="@+id/spacer3"
        android:layout_alignParentStart="true" />

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/spacer4"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:background="@color/purple_3"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_below="@+id/header1"
        android:layout_alignParentStart="true" />

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontCheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/postFacebook"
    android:text="Post to Facebook"
    android:checked="true"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/spacer8"
        android:background="@color/purple_2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post!"
        android:id="@+id/postButton3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:background="#f0799b" />

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="7sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/spacer5"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:background="@color/purple_5"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_below="@+id/spacer7"
        android:layout_alignParentStart="true" />

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/spacer8"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:background="#ff0049"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_below="@+id/spacer4"
        android:layout_alignParentStart="true" />

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/spacer7"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:background="#ff0049"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_below="@+id/postFacebook"
        android:layout_alignParentStart="true" />

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ask Friends To View Your Post"
        android:id="@+id/header2"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:background="@color/purple_5"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/spacer5"
        android:layout_alignParentStart="true" />

    <sudarshan_gopalakrishnan.fbla.tompkins.dresscheck.datatypes.view.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="7sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/spacer6"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:background="@color/purple_5"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_below="@+id/header2"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendNames"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/postButton3"
        android:choiceMode="none"
        android:fastScrollEnabled="true"
        android:fastScrollAlwaysVisible="false"
        android:scrollbars="none"
        android:divider="#00ffffff"
        android:layout_marginBottom="20dp"
        android:dividerHeight="20dp"
        android:layout_below="@+id/spacer6"
        android:layout_marginTop="10dp" />



</RelativeLayout>